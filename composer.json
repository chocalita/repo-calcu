{
    "name": "yecid/repo-calcu",
    "description": "Project to use as a base library",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Yecid\\RepoCalcu\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Yecid Rodriguez",
            "email": "yecid.pra@gmail.com"
        }
    ],
    "minimum-stability": "RC",
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "squizlabs/php_codesniffer": "^3.11"
    },
    "scripts": {
        "phpcs-check": "phpcs --colors -s",
        "phpcs-fix": "phpcbf --colors -s",
        "phpcs-auto-check": "@phpcs-check --standard=.phpcs.xml",
        "phpcs-auto-fix": "@phpcs-fix --standard=.phpcs.xml",
        "phpcs-auto-check-summary": "phpcs --report=summary -p",
        "phpcs-auto-fix-summary": "phpcbf --report=summary -p"
    }
}
